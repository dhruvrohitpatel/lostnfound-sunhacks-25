{
  "name": "lostnfound-sunhacks-25",
  "version": "1.0.0",
  "description": "ASU Lost & Found API - FastAPI backend with npm dev scripts",
  "main": "main.py",
  "scripts": {
    "dev": "npm run install-deps && nodemon",
    "dev-simple": "npm run install-deps && ./venv/bin/uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start": "./venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000",
    "install-deps": "./venv/bin/pip install -r requirements.txt",
    "setup": "npm install && npm run install-deps",
    "test": "./venv/bin/python -m pytest",
    "lint": "./venv/bin/python -m flake8 .",
    "format": "./venv/bin/python -m black ."
  },
  "keywords": [
    "fastapi",
    "lost-and-found",
    "asu",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
